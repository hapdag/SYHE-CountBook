<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/incrementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_above="@+id/resetCounterButton"
        android:layout_toRightOf="@+id/resetCounterButton"
        android:layout_toEndOf="@+id/resetCounterButton"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <Button
        android:id="@+id/decrementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_above="@+id/resetCounterButton"
        android:layout_toLeftOf="@+id/resetCounterButton"
        android:layout_toStartOf="@+id/resetCounterButton"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/resetCounterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset counter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/counterDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/counterDeleteButton"
        android:layout_alignEnd="@+id/incrementButton"
        android:layout_alignLeft="@+id/decrementButton"
        android:layout_alignRight="@+id/incrementButton"
        android:layout_alignStart="@+id/decrementButton"
        android:text="Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/counterNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/decrementButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/decrementButton"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/counterCommentEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/counterNameEditText"
        android:layout_alignStart="@+id/counterNameEditText"
        android:layout_alignTop="@+id/counterNameEditText"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/counterValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resetCounterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
</RelativeLayout>